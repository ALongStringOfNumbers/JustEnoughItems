pipeline {
    agent any
    environment {
      ORG_GRADLE_PROJECT_curseforge_apikey = credentials('jei-curseforge-key')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                sh "rm -rf build/libs"
            }
        }

        stage('Forge Test') {
            steps {
                sh "JAVA_HOME=${env.JDK_17} ./gradlew :Forge:cleanTest :Forge:test  --no-build-cache --no-daemon"
            }
        }

        stage('Forge Build') {
            steps {
                sh "JAVA_HOME=${env.JDK_17} ./gradlew :Forge:build -PBUILD_NUMBER=${env.BUILD_NUMBER} --no-daemon"
            }
        }

        stage('Archive') {
            steps {
                archive includes: 'build/libs/*.jar'
                junit allowEmptyResults: true, testResults: 'build/test-results/**/*.xml'
            }
        }

        stage('Forge Publish') {
            steps {
                sh "JAVA_HOME=${env.JDK_17} ./gradlew :Forge:publish :Forge:publishCurseForge -PBUILD_NUMBER=${env.BUILD_NUMBER} -PDEPLOY_DIR=${env.MAVEN_DEPLOY_DIR} --no-daemon"
            }
        }
    }
}
